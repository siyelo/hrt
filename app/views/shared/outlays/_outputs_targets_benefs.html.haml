%li
  .column2.borderless.targets.js_targets
    %h3= "Outputs (#{current_fy(@response)})"
    .section_form.last
      = f.semantic_fields_for :outputs do |ca|
        = render "shared/outlays/output_fields", :f => ca
      .add.push-12
        = link_to_add_fields "Add Output", f, :outputs, "shared/outlays/", :class => "create_alt marginless js_add_nested"

  .column2.last.borderless.targets.js_targets
    %h3= "Targets (#{next_fy(@response)})"
    .section_form.last
      = f.semantic_fields_for :targets do |ca|
        = render "shared/outlays/target_fields", :f => ca
      .add.push-12
        = link_to_add_fields "Add Target", f, :targets, "shared/outlays/", :class => "create_alt marginless js_add_nested"

%li
  .column2.borderless
    %h3 Beneficiaries
    %ul.section_form.last
      = f.input :beneficiaries, collection: last_version_beneficiaries, label: false, as: :check_boxes, wrapper_html: { :class => 'borderless beneficiaries_boxes' }
      = f.input :other_beneficiaries, :label => 'Other Beneficiaries' , :input_html => { :rows => 2 }, :as => :text, :required => false, :wrapper_html => { :class => 'other_beneficiaries' }

  .column2.last.borderless
    - hint = 'Indicate whether the activity is planned to be implemented in any of these Government Of Rwanda Fiscal Quarters'
    %h3
      Planned Dates
      = link_to image_tag("tooltip.png"), "#", :title => hint, :class => 'tooltip'
    %fieldset.section_form.last
      %ol.planned_dates_boxes
        %label
          %strong Current Year:
        %li
          = f.check_box :planned_for_gor_q1, :class => 'left'
          = f.label :planned_for_gor_q1, "July - September"
        %li
          = f.check_box :planned_for_gor_q2, :class => 'left'
          = f.label :planned_for_gor_q2, "October - December"
        %label
          %strong Following Year:
        %li
          = f.check_box :planned_for_gor_q3, :class => 'left'
          = f.label :planned_for_gor_q3, "January - March"
        %li
          = f.check_box :planned_for_gor_q4, :class => 'left'
          = f.label :planned_for_gor_q4, "April - June"
