= f.inputs :class => 'inputs' do
  %li.last
    %ul.section_form.first
      = f.input :name, :required => false, :hint => "Name of the location"

  %li.last
    %ul.horizontal.section_form.last.connect
      = f.actions :class => 'buttons' do
        = f.action :submit, :label => (@location.new_record? ? "Create New Location" : "Update Location"), :button_html => {:class => 'next'}
